<body>

  <div class="container mt-5">
    <div class="jumbotron p-3 mb-2 bg-info text-white">
      <div class="text-center">
        <h1><span class="fa fa-heart-o"></span> Welcome to the Ice Cream Shop</h1>
        <hr>
      </div>
      <div id="icecreamMenu"> 
        <h3>Ice Cream Menu</h3>
        <ul>
          {{#each icecream}}
            <li>
              <p>{{icename}}</p>
              {{#if onMenu}}
              {{> icecream devoured=false}}
              {{/if}}
              <p><button type="submit" class="btn btn-secondary" id="change-devour">Mmmm Delicious!</button></p>
            </li>
          {{/each}}
        </ul>
      </div>
      <div id="IcecreamEaten">
        <h3>Ice Cream Eaten</h3>
          <ul>
            {{#each icecreams}}
            {{#if devoured}}
            <div class="input-group mb-1">
              <li class="form-control">{{this.iceName}}</li>
              <button class="btn btn-secondary js_deleteBurger" data-id="{{this.id}}">Eat Me!</button>
            </div>
            {{/if}}
            {{/each}}
          </ul>
      </div>
      <form name="formSurvey">
        <br>
        <h4 class="text-center">What kind of ice cream would you like to add to the menu?</h4>
        <div class="col-lg-12 text-center"> 
            <input type="name" class="form-control col-md-12 text-center" id="newIceCreamName" aria-describedby="newIceCreamName"
            placeholder="Type of Ice Cream">
        </div>
        <br>
        <div class="col-lg-12 text-center"> 
            <button type="submit" class="btn btn-secondary" id="submitBtn">Submit</button>
        </div>    
        </form>
    </div>
  </div>    
</body>

</html>










